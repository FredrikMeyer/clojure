{
    "gitbook": ">=3.0.0",
    "title": "Clojure, Practicalli",
    "description": "Introducing Clojure development and the essence of functional programming",
    "structure": {
        "readme": "introduction.md"
    },
    "styles": {
        "website": "styles/website.css",
        "ebook": "styles/ebook.css",
        "pdf": "styles/pdf.css",
        "mobi": "styles/mobi.css",
        "epub": "styles/epub.css"
    },
    "plugins": [
        "toggle-chapters",
        "codeblock-disable-glossary",
        "disqus",
        "gist",
        "ga",
        "toolbar",
        "callouts",
        "sectionx",
        "simpletabs",
        "youtube",
        "klipse",
        "wide-page"
    ],
    "pluginsConfig": {
        "callouts": {
            "showTypeInHeader": false,
            "star": {
                "alert": "warning",
                "picto": "fa-star"
            }
        },
        "sectionx": {
            "tag": "b"
        },
        "disqus": {
            "shortName": "clojure-practicalli"
        },
        "ga": {
            "token": "UA-28030709-7"
        },
        "toolbar": {
            "buttons":
            [
                {
                   "label": "Clojurians Slack",
                   "icon": "fa fa-comments-o",
                   "url": "http://clojurians.slack.com/messages/practicalli"
                },
                {
                    "label": "GitHub",
                    "icon": "fa fa-github",
                    "url": "https://github.com/practicalli/clojure-practicalli-content/projects/1"
                }
            ]
        }
    },
    "links": {
        "sidebar": {
            "Clojure.org": "https://clojure.org/",
            "Replete REPL": "https://repl.replete-web.io/",
            "re-find": "https://borkdude.github.io/re-find.web/",
            "deps.edn aliases": "https://github.com/practicalli/clojure-deps-edn"
        }
    },
    "variables": {
        "host": "practical.li"
    }
}
